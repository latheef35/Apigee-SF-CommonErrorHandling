<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<MessageLogging async="false" continueOnError="false" enabled="true" name="ML-File-Error">
    <File>
        <Message defaultVariableValue="unknown">{system.time}|{organization.name}|{environment.name}|{apiproxy.name}|{request.uri}|{request.content}|{response.content}|{error.content}||{flow.error.code}|{flow.error.reason}|{flow.error.status}|{flow.error.message}|{flow.error.info}
</Message>
        <FileName>error.log</FileName>
        <FileRotationOptions rotateFileOnStartup="true">
            <FileRotationType>SIZE</FileRotationType>
            <MaxFileSizeInMB>10</MaxFileSizeInMB>
            <MaxFilesToRetain>10</MaxFilesToRetain>
        </FileRotationOptions>
    </File>
    <logLevel>ERROR</logLevel>
</MessageLogging>
